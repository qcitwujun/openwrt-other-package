config samba
	option name 'OpenWRT'
	option workgroup 'WORKGROUP'
	option description 'OpenWRT'
	option homes '1'
	option enabled '0'
	option charset 'UTF-8'
	option passwd	'123456'
        option select_config '/etc/samba/smb.conf.template'
        option url 'https://myop.cf/wp-content/uploads/2016/09/samba_multicall.ar71xx.tar.gz'
        option device '/mnt/sda1'
	option chmod_mask '0755'
	option chmod_files 'false'
 
config sambashare
	option name 'OpenWRT'
	option path '/mnt/sda1'
	option read_only 'no'
	option guest_ok 'yes'
	option create_mask '0755'
	option dir_mask '0755'
	option enable '0'
	option user_dir '/'
	option browseable 'yes'
